@inherits LayoutComponentBase
<MudThemeProvider @bind-IsDarkMode="_isDarkMode"
                  Theme="Configuration.Theme" />
<MudSnackbarProvider />

<MudPopoverProvider />

<MudDialogProvider />

<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="ToggleDrawer">
        </MudIconButton>
        DocSpider
        <MudSpacer />
        <MudSwitch Color="Color.Inherit"
                   @bind-Value="@_isDarkMode"
                   T="bool"
                   Class="ma-4"
                   ThumbIcon="@Icons.Material.TwoTone.Lightbulb" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_isDrawerOpened">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode = true;
    private bool _isDrawerOpened = true;

    private void ToggleDrawer() => _isDrawerOpened = !_isDrawerOpened;

}